    <script src="https://servicebot.io/js/servicebot-embed.js" type="text/javascript"></script>
    <script type="text/javascript">

        let signup = function(response) {
            let props = response.request.references.service_template_properties.reduce((arr, prop) => {
                arr[prop.name] = prop.data.value;
                return arr;
            }, {});

            return fetch("/signup",
                {
                    method: "POST",
                    headers: {"content-type": "application/json"},
                    credentials : "include",
                    body: JSON.stringify({"business" : props["business-name"], "tier": props["tier"], "email": response.request.email, "password": response.request.password})
                });
        }
        Servicebot.init({
            templateId: 1,
            url: "http://localhost:3000",
            selector: document.getElementById('servicebot-request-form'),
            handleResponse: signup,
            type: "request",
            spk:"pk_test_N2lJpoe3DqlWgWJoFZuW5mFq",
            setPassword: true,
            redirect: "/profile",
            propertyOverrides: {
              tier: "<%= tier %>"
            },
            forceCard: false //set to true if you want credit card to be a required field for the customer
        })
    </script>


